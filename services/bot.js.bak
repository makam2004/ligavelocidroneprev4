bot.onText(/\/tracks/, async (msg) => {
  const chatId = msg.chat.id;
  try {
    const res = await fetch('http://ligavelocidrone.onrender.com/api/configuracion');
    const json = await res.json();

    if (!json) {
      await bot.sendMessage(chatId, 'No se pudo obtener la configuraci√≥n actual.');
      return;
    }

    const texto = `üéÆ Escenarios y Tracks Semanales:\n` +
      `1Ô∏è‚É£ Escenario 1: ${json.track1_escena}\n` +
      `   Pista 1: ${json.track1_pista}\n` +
      `2Ô∏è‚É£ Escenario 2: ${json.track2_escena}\n` +
      `   Pista 2: ${json.track2_pista}`;

    await bot.sendMessage(chatId, texto);
